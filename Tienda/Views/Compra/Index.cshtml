@page
@using Tienda.Models
@model List<CompraCLS>
@{
    ViewData["Title"] = "Index";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-dark">
    <thead>
        <th class="text-center">@Html.LabelFor(p => Model[0].Cliente)</th>
        <th class="text-center">@Html.LabelFor(p => Model[0].Articulo)</th>
        <th class="text-center">@Html.LabelFor(p => Model[0].Fecha)</th>
        <th class="text-center">@Html.LabelFor(p => Model[0].Unidades)</th>
        <th class="text-center">@Html.LabelFor(p => Model[0].Total)</th>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center">@item.Cliente</td>
                <td class="text-center">@item.Articulo</td>
                <td class="text-center">@item.Fecha</td>
                <td class="text-center">@item.Unidades</td>
                <td class="text-center">@item.Total</td>
            </tr>
        }
    </tbody>
</table>