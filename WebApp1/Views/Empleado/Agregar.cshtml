@page
@model WebApp1.Models.EmpleadoCLS


@{
    ViewBag.Title = "Agregar";
    List<SelectListItem> listaTC = (List<SelectListItem>) ViewBag.listaTC;
    List<SelectListItem> listaSexo = (List<SelectListItem>) ViewBag.listaSexo;
    List<SelectListItem> listaTU = (List<SelectListItem>) ViewBag.listaTU;
}

<h1>@ViewBag.Title</h1>
@try{
<div class="row">
    <div class="col">
        @using (Html.BeginForm("Agregar","Cliente",FormMethod.Post))
        {
            <div>
                @Html.LabelFor(p => p.Nombre , new {@class="form-label"})
                @Html.TextBoxFor(p => p.Nombre, new {@class="form-control"})
            </div>
            <div>
                @Html.LabelFor(p => p.APaterno , new {@class="form-label"})
                @Html.TextBoxFor(p => p.APaterno, new {@class="form-control"})
            </div>
            <div>
                @Html.LabelFor(p => p.AMaterno , new {@class="form-label"})
                @Html.TextBoxFor(p => p.AMaterno, new {@class="form-control"})
            </div>
            <div>
                @Html.LabelFor(p => p.Email , new {@class="form-label"})
                @Html.TextBoxFor(p => p.Email, new {@class="form-control"})
            </div>
            <div>
                @Html.LabelFor(p => p.Direccion , new {@class="form-label"})
                @Html.TextBoxFor(p => p.Direccion, new {@class="form-control"})
            </div>

            <div>
                @Html.LabelFor(p => p.Sexo , new {@class="form-label"})
                @Html.DropDownListFor(p => p.Sexo, listaSexo, new {@class="form-control"})
            </div>
            <div>
                @Html.LabelFor(p => p.Telefono , new {@class="form-label"})
                @Html.TextBoxFor(p => p.Telefono, new {@class="form-control"})
            </div>
            <div>
                @Html.LabelFor(p => p.Sueldo , new {@class="form-label"})
                @Html.TextBoxFor(p => p.Sueldo, new {@class="form-control"})
            </div>
            <div>
                @Html.LabelFor(p => p.FechaContrato , new {@class="form-label"})
                @Html.TextBoxFor(p => p.FechaContrato, new {@class="form-control"})
            </div>
            <div>
                @Html.LabelFor(p => p.TipoContrato , new {@class="form-label"})
                @Html.DropDownListFor(p => p.TipoContrato,listaTC, new {@class="form-control"})
            </div>
            <div>
                @Html.LabelFor(p => p.TipoUsuario , new {@class="form-label"})
                @Html.DropDownListFor(p => p.TipoUsuario,listaTU, new {@class="form-control"})
            </div>
        }
    </div>
</div>
}
catch (Exception e)
{
    
    <p>@e.Message</p>
}
